#!/bin/bash
set -x
set -e

apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 314DF160
echo "deb http://ppa.launchpad.net/ubuntugis/ppa/ubuntu $(lsb_release -cs) main" >> /etc/apt/sources.list.d/ubuntugis-ppa.list
echo "deb http://ppa.launchpad.net/ubuntugis/ubuntugis-unstable/ubuntu $(lsb_release -cs) main" >> /etc/apt/sources.list.d/ubuntugis-ppa.list

apt-get update -qq
apt-get install -y libgdal-dev libgeos-dev libproj-dev libudunits2-dev liblwgeom-dev


